{
  "manifest_version": 2,

  "name": "LeagueSets",
  "description": "A tool used to create in-game item sets using guides from popular League of Legends fansites such as LOKING, Mobafire, Champion.gg, and ProBuilds.",
  "version": "1.0.0",

  "background": {
    "persistent": false,
    "scripts": ["./scripts/background.js"]
  },

  "content_scripts": [
  	{
  		"matches": ["http://www.lolking.net/guides/*"],
  		"js": ["./public/js/jquery.min.js", "./scripts/lolking.js"],
      "run_at":     "document_idle",
      "all_frames": false
  	},
    {
      "matches": ["http://www.probuilds.net/guide/*"],
      "js": ["./public/js/jquery.min.js", "./scripts/probuilds.js"],
      "run_at":     "document_idle",
      "all_frames": false
    },
    {
      "matches": ["*://champion.gg/champion/*"],
      "js": ["./public/js/jquery.min.js", "./scripts/championgg.js"],
      "run_at":     "document_idle",
      "all_frames": false
    }
  ],

  "page_action": {
    "default_icon":"./public/icon.png",
    "default_title": "LeagueSet",
    "default_popup": "./public/popup.html"
  },

  "permissions": [
    "clipboardWrite"
  ]
}